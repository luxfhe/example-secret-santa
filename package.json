{
  "name": "encrypted-santa",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "pnpm --filter @shielded-stablecoin/nextjs dev",
    "build": "pnpm --filter hardhat compile && pnpm --filter @shielded-stablecoin/nextjs build",
    "deploy": "pnpm --filter hardhat deploy",
    "test": "pnpm --filter hardhat test",
    "clean": "rm -rf packages/*/node_modules packages/*/.next packages/*/dist node_modules"
  },
  "devDependencies": {
    "@luxfi/contracts": "^1.4.0",
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.4.5",
    "hardhat": "^2.22.0",
    "hardhat-deploy": "^0.12.0",
    "typescript": "^5.0.0"
  }
}
